{
    "name": "lc3-lang",
    "displayName": "ILLC3",
    "icon":"illc3.png",
    "galleryBanner": {
		"color": "#C80000",
		"theme": "dark"
    },
    "bugs": {
		"url": "https://github.com/zatch10/ILLC3/issues",
		"email": "ILLC3_Devs@outlook.com"
	},
    "homepage": "https://github.com/zatch10/ILLC3/blob/master/README.md",
    "description": "LC3 extension with features like Code Snippets, Code Highlighting and Intellisense",
    "license": "SEE LICENSE IN LICENSE.txt",
    "publisher": "ik4pupwfc52vswdvq4zuuxru5tpduuh7cur42icg2uylyvmpmd3q",    
    "version": "1.0.7",    
    "repository": {
		"type": "git",
		"url": "https://github.com/zatch10/ILLC3.git"
	},
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "lc3",
                "aliases": [
                    "lc3",
                    "lc3"
                ],
                "extensions": [
                    ".asm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lc3",
                "scopeName": "source.asm",
                "path": "./syntaxes/lc3.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "lc3",
                "path": "./snippets_lc3/snippets.json"
            }
        ],
        "keybindings": [
            {
                "key": "shift+enter a",
                "command": "editor.action.insertSnippet",
                "when": "editorTextFocus",
                "args": {
                    "langId": "lc3",
                    "name": "add"
                }
            },
            {
                "key": "shift+enter d",
                "command": "editor.action.insertSnippet",
                "when": "editorTextFocus",
                "args": {
                    "langId": "lc3",
                    "name": "and"
                }
            },
            {
                "key": "shift+enter b",
                "command": "editor.action.insertSnippet",
                "when": "editorTextFocus",
                "args": {
                    "langId": "lc3",
                    "name": "br"
                }
            },
            {
                "key": "shift+enter q",
                "command": "editor.action.insertSnippet",
                "when": "editorTextFocus",
                "args": {
                    "langId": "lc3",
                    "name": "jmp"
                }
            },
            {
                "key": "shift+enter j",
                "command": "editor.action.insertSnippet",
                "when": "editorTextFocus",
                "args": {
                    "langId": "lc3",
                    "name": "jsr"
                }
            },
            {
                "key": "shift+enter y",
                "command": "editor.action.insertSnippet",
                "when": "editorTextFocus",
                "args": {
                    "langId": "lc3",
                    "name": "jsrr"
                }
            },
            {
                "key": "shift+enter right",
                "command": "editor.action.insertSnippet",
                "when": "editorTextFocus",
                "args": {
                    "langId": "lc3",
                    "name": "ld"
                }
            },
            {
                "key": "shift+enter i",
                "command": "editor.action.insertSnippet",
                "when": "editorTextFocus",
                "args": {
                    "langId": "lc3",
                    "name": "ldi"
                }
            },
            {
                "key": "shift+enter r",
                "command": "editor.action.insertSnippet",
                "when": "editorTextFocus",
                "args": {
                    "langId": "lc3",
                    "name": "ldr"
                }
            },
            {
                "key": "shift+enter e",
                "command": "editor.action.insertSnippet",
                "when": "editorTextFocus",
                "args": {
                    "langId": "lc3",
                    "name": "lea"
                }
            },
            {
                "key": "shift+enter n",
                "command": "editor.action.insertSnippet",
                "when": "editorTextFocus",
                "args": {
                    "langId": "lc3",
                    "name": "not"
                }
            },
            {
                "key": "shift+enter left",
                "command": "editor.action.insertSnippet",
                "when": "editorTextFocus",
                "args": {
                    "langId": "lc3",
                    "name": "st"
                }
            },
            {
                "key": "shift+enter t",
                "command": "editor.action.insertSnippet",
                "when": "editorTextFocus",
                "args": {
                    "langId": "lc3",
                    "name": "sti"
                }
            },
            {
                "key": "shift+enter =",
                "command": "editor.action.insertSnippet",
                "when": "editorTextFocus",
                "args": {
                    "langId": "lc3",
                    "name": "str"
                }
            }
        ]
    }
}
